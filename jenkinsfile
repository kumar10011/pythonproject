pipeline {
    agent any

    environment {
        DOCKERHUB_USER = "anjanikr1103"
        DOCKERHUB_PASS = credentials('anjani1103') // Jenkins credentials
        IMAGE_NAME = "aws-ecommerce"
        IMAGE_TAG = "v${BUILD_NUMBER}"
        EC2_IP = "3.88.206.34"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/kumar10011/pythonproject'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                sh 'echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh '''
                docker tag $IMAGE_NAME $DOCKERHUB_USER/$IMAGE_NAME:$IMAGE_TAG
                docker push $DOCKERHUB_USER/$IMAGE_NAME:$IMAGE_TAG
                '''
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent (credentials: ['ec2-ssh']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ubuntu@$3.88.206.34 '
                    sudo docker stop aws-ecommerce || true &&
                    sudo docker rm aws-ecommerce || true &&
                    sudo docker pull $DOCKERHUB_USER/$IMAGE_NAME:$IMAGE_TAG &&
                    sudo docker run -d -p 80:80 --name aws-ecommerce $DOCKERHUB_USER/$IMAGE_NAME:$IMAGE_TAG
                    '
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful! Version: $IMAGE_TAG"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
